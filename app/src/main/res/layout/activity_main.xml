<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button5"
        android:layout_width="205dp"
        android:layout_height="40dp"
        android:text="24-Hour"
        android:textColor="#8b7765"
        android:background="#ffa500"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button3"
        android:layout_width="205dp"
        android:layout_height="40dp"
        android:text="12-Hour"
        android:textColor="#ffff00"
        android:background="#ffa500"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:layout_width="390dp"
        android:layout_height="586dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="match_parent"
                android:layout_height="400dp"

                android:scaleType="fitXY"
                app:srcCompat="@drawable/sydney" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sydney"
                android:textSize="50dp"

                />

            <TextClock
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sydney"
                android:textSize="50dp"
                android:format24Hour="hh:mm"
                android:textColor="#ffa500"
                android:timeZone="Australia/NSW"


                />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="400dp"

                android:scaleType="fitXY"
                app:srcCompat="@drawable/beijing" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BeiJing"
                android:textSize="50dp" />

            <TextClock
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BeiJing"
                android:textSize="50dp"
                android:timeZone="Asia/Chongqing"
                android:format24Hour="hh:mm"
                android:textColor="#ffa500"


                />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="400dp"

                android:scaleType="fitXY"
                app:srcCompat="@drawable/vancouver" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vancouver"
                android:textSize="50dp" />

            <TextClock
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vancouver"
                android:textSize="50dp"
                android:timeZone="America/Vancouver"
                android:textColor="#ffa500"

                />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="match_parent"
                android:layout_height="400dp"

                android:scaleType="fitXY"
                app:srcCompat="@drawable/london" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="London"
                android:textSize="50dp" />

            <TextClock
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="London"
                android:textSize="50dp"
                android:timeZone="Europe/London"
                android:textColor="#ffa500"

                />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="match_parent"
                android:layout_height="400dp"

                android:scaleType="fitXY"
                app:srcCompat="@drawable/bangkok" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="bangkok"
                android:textSize="50dp" />

            <TextClock
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="bangkok"
                android:textSize="50dp"
                android:timeZone="Asia/Bangkok"
                android:textColor="#ffa500"
                />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>